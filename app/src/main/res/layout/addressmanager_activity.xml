<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_addressmanager_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titler_bar">
        <ImageView
            android:id="@+id/iv_addressmanager_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/top_left_back"/>
        <TextView
            android:id="@+id/tv_addressmanager_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址信息管理"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_addressmanager_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:text="新增地址信息"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/dividing_strip"
        android:layout_below="@+id/rl_addressmanager_title"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        android:layout_above="@+id/tv_addressmanager_add"/>

</RelativeLayout>
