<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titler_bar">
        <ImageView
            android:id="@+id/iv_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/top_left_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/dividing_strip"/>
    <EditText
        android:id="@+id/et_login_phoneNub"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/huiframe_bg"
        android:hint="请输入登录账号"
        android:textColorHint="@color/edittext_hint"
        android:textSize="13sp"
        android:paddingLeft="18dp"/>
    <EditText
        android:id="@+id/et_login_Password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/huiframe_bg"
        android:hint="请输入登录密码"
        android:textColorHint="@color/edittext_hint"
        android:textSize="13sp"
        android:paddingLeft="18dp"/>

    <TextView
        android:id="@+id/tv_login_Determine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:background="@color/black"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:text="确认登录"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"/>

</LinearLayout>
